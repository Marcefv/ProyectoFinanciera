@model IEnumerable<ProyectoFinanciera.Models.Respuestas>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Respuestas relacionadas</h2>
<br />

<p>
    <button class="btn btn-primary" onclick="location.href='@Url.Action("Create")';return false;">Responder</button>
</p>

<h3>Pregunta: @ViewBag.Nombre</h3>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.Respuesta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nombreResponde)
        </th>
        <th>Detalles</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Respuesta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nombreResponde)
            </td>
            <td>
                @Html.ActionLink("Ver la respuesta", "Details", new { id = item.id }) 
            </td>
        </tr>
    }

</table>

@Html.ActionLink("Regresar a sección de Preguntas", "Index", "Preguntas")
<br>
@Html.ActionLink("Regresar a sección de Respuestas Generales", "Index", "Respuestas")

